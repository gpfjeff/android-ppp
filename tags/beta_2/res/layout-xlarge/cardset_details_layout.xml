<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelCardsetName"
				android:textSize="28sp"
		        android:textStyle="bold"
		        android:paddingBottom="10dp"
				android:text=""></TextView>
			<TableLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="0"
				android:shrinkColumns="1">
				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="10dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:id="@+id/labelLastCardPrompt"
						android:text="@string/cardset_details_last_card"
						android:textSize="20sp"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:id="@+id/labelLastCardValue"
						android:text="1"
						android:textSize="20sp"></TextView>
				</TableRow>
				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="5dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:id="@+id/labelCountTogglesPrompt"
						android:text="@string/cardset_details_toggle_count"
						android:textSize="20sp"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:id="@+id/labelCountTogglesValue"
						android:text="0"
						android:textSize="20sp"></TextView>
				</TableRow>
				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="5dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:id="@+id/labelNumRowsPrompt"
						android:text="@string/new_card_numrows_label"
						android:textSize="20sp"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:id="@+id/labelNumRowsValue"
						android:text="10"
						android:textSize="20sp"></TextView>
				</TableRow>
				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="5dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:id="@+id/labelNumColumnsPrompt"
						android:text="@string/new_card_numcols_label"
						android:textSize="20sp"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:id="@+id/labelNumColumnsValue"
						android:text="7"
						android:textSize="20sp"></TextView>
				</TableRow>
				<TableRow android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="5dp">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:id="@+id/labelPasscodeLengthPrompt"
						android:text="@string/new_card_pclength_label"
						android:textSize="20sp"></TextView>
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:id="@+id/labelPasscodeLengthValue"
						android:text="4"
						android:textSize="20sp"></TextView>
				</TableRow>
			</TableLayout>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:id="@+id/labelAlphabetPrompt"
				android:text="@string/new_card_alphabet_label"
				android:textSize="20sp"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelAlphabetValue"
		        android:paddingBottom="5dp"
				android:text=""
				android:textSize="20sp"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:id="@+id/labelSequenceKeyPrompt"
				android:text="@string/new_card_seqkey_label"
				android:textSize="20sp"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelSequenceKeyValue"
		        android:paddingBottom="5dp"
				android:text=""
				android:textSize="20sp"></TextView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
